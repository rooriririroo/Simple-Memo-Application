<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/date_detailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="TextView" />

    <ImageView
        android:id="@+id/image_detailView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/date_detailView"
        android:layout_marginStart="80dp"
        android:src="@drawable/ap"
        />

    <TextView
        android:id="@+id/write_detailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_detailView"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/modify_button"
            android:onClick="modifyClick"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#EB8F90"
            android:text="수정"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete_button"
            android:onClick="deleteClick"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#EB8F90"
            android:text="삭제"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>